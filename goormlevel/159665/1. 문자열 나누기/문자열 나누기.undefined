#include <iostream>
#include <algorithm>
#include <string>
#include <vector>

using namespace std;
int main() {
	ios::sync_with_stdio(false);
	cin.tie(0);
	cout.tie(0);
	
	int n;
	string s;

	cin >> n >> s;

	int answer = 0;
	int idx;
	for(int i=0;i<n;++i)
	{
		char c = s[i];

		idx = i;
		do{
			idx++;
		}while(c == s[idx]);
			
		i = idx-1;
		
		answer++;
	}

	cout << answer;
	return 0;
}